


<div class="container" style="margin-top: 50px;">

    <div class="row32">
        <p class="text-end cerrar-sesion">Hola {{nombre}} <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesion</a></p>
    </div>
    <div class="row23">
        <div class="col-7">
            <h3>Listado de novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus"> </i>Nuevo</a>
        </div>
    </div>
</div>
<div class="row2">
    <div class="col">
        <table class="table">
            <thead class="thead dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">Imagen</th>
                    <th scope="col" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>

                {{#each novedades}}
                <tr>
                    <th scope="row2">{{id}}</th>
                    <td class="adaptable">{{titulo}}</td>
                    <td>{{{imagen}}}</td>
                    <td class="text center">
                        <p>{{cuerpo}}</p>
                        <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-pencil"></i></a>
                        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i></a>    
                        {{!-- se agrega la ruta para que el href sepa eliminar, es la que sale en novedades.js --}}
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>

</div>

